            android:visibility="gone" />

        <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_message"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_seconds"
            android:layout_width="match_parent"
            android:layout_height="82dp"
